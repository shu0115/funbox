.container{ style: 'width: 900px'}
  %h3
    Tracks by
    = link_to @user.name, "#{Settings.twitter_page}#{@user.name}", target: "_blank"

- if @tracks.present?
  .text-center
    = render partial: '/common/playall', locals: { tracks: @tracks, unique_ids: @unique_ids }
  %br
  %p.text-center= link_to 'Shuffle', user_playall_path(@user), class: 'btn btn-primary'
  %br
  %table
    - @unique_ids.each_slice(4) do |ids|
      %tr
      - ids.each do |id|
        - track = @tracks_hash[id]
        %td{ style: 'padding: 5px;' }
          = render partial: '/common/video_thumbnail', locals: { track: track }
%br
